<dialog id="ChangeScheduleModal" class="scheduleViewModal">
    <div class="modalTitle">
        Изменение рабочего графика
    </div>
    <div>
        <div class="modalItem">
            <div style="display:none" id="doctorId"></div>
            <div class="flexContainer">
                <label class="LabelForInput">Имя врача:&nbsp</label>
                <div id="doctorName" type="text"></div>
            </div>
        </div>

        <div class="flexContainer modalItem">
            <label class="LabelForInput">Понедельник:&nbsp</label>
            <input id="mondayBeginChange" type="time" min="08:00" max="21:00" step="1800">
            <div> - </div>
            <input id="mondayEndChange" type="time" min="08:00" max="21:00" step="1800">
        </div>

        <div class="flexContainer modalItem">
            <label class="LabelForInput">Вторник:</label>
            <input id="tuesdayBeginChange" type="time" min="08:00" max="21:00" step="1800">
            <div> - </div>
            <input id="tuesdayEndChange" type="time" min="08:00" max="21:00" step="1800">
        </div>

        <div class="flexContainer modalItem">
            <label class="LabelForInput">Среда:</label>
            <input id="wednesdayBeginChange" type="time" min="08:00" max="21:00" step="1800">
            <div> - </div>
            <input id="wednesdayEndChange" type="time" min="08:00" max="21:00" step="1800">
        </div>

        <div class="flexContainer modalItem">
            <label class="LabelForInput">Четверг:</label>
            <input id="thursdayBeginChange" type="time" min="08:00" max="21:00" step="1800">
            <div> - </div>
            <input id="thursdayEndChange" type="time" min="08:00" max="21:00" step="1800">
        </div>

        <div class="flexContainer modalItem">
            <label class="LabelForInput">Пятница:</label>
            <input id="fridayBeginChange" type="time" min="08:00" max="21:00" step="1800">
            <div> - </div>
            <input id="fridayEndChange" type="time" min="08:00" max="21:00" step="1800">
        </div>

        <div class="flexContainer modalItem">
            <label class="LabelForInput">Суббота:</label>
            <input id="saturdayBeginChange" type="time" min="08:00" max="21:00" step="1800">
            <div> - </div>
            <input id="saturdayEndChange" type="time" min="08:00" max="21:00" step="1800">
        </div>

        <div class="flexContainer modalItem">
            <label class="LabelForInput">Воскресенье:</label>
            <input id="sundayBeginChange" type="time" min="08:00" max="21:00" step="1800">
            <div> - </div>
            <input id="sundayEndChange" type="time" min="08:00" max="21:00" step="1800">
        </div>

        <div class="modalItem">
            <label class="LabelForInput">Дата вступления расписания в силу:</label>
            <input id="newActualisationDate" class="inputRow" type="week">
        </div>
        <br>
    </div>
    <div id="ChangeScheduleModalError" class="errorMessage"></div>
    <div class="modalFooter">
        <button type="button" id="closeChangeScheduleModal" class="modalButton">Закрыть</button>
        <button type="submit" id="submitChangeScheduleModal" class="submitButtonModal">Отправить данные</button>
    </div>
</dialog>